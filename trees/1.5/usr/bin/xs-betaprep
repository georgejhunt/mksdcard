#!/bin/bash

# Clean machine for shipment, removing personal/sensitive data.

# See also /bin/xs-sysprep which calls this entire routine, then cleans more thoroughly,
# prior to final shipment.

# cp restorebashrc /root/.bashrc
rm -f /root/.ssh/*
rm -f /etc/xsce/uuid
rm -f /etc/xsce/handle
touch /etc/xsce/access-point
# the following instructs olpc's initramfs to expand the second partition
rm -f /.olpc-configured
rm -f /home/olpc/.olpc-configured
rm -rf /etc/NetworkManager/system-connections/*
rm -f /etc/sysconfig/network-scripts/keys*
rm -f /etc/alsa/sound.state
rm -f /etc/ssh/ssh_host_rsa_key{,.pub}
rm -f /etc/sysconfig/network
rm -rf /home/olpc/.sugar /home/olpc/.gconf* /home/olpc/.local.share.telepathy
rm -f /home/olpc/.config/epiphany/cookies.sqlite
rm -f /home/olpc/.config/epiphany/ephy-history.db
rm -f /home/.devkey.html
rm -f /root/.netrc
rm -rf /root/tools

# delete any ifcfg files present that may reflect wifi connections (ssid in the ifcfg-<name>)
ls -1 /etc/sysconfig/network-scripts/ifcfg* | grep -v -eifcfg-LAN -eifcfg-lo| xargs rm -f

# put the ifcfg files in place that will work in AP mode
cat <<EOF >/etc/sysconfig/network-scripts/ifcfg-LAN
# Generated by XSCE
DEVICE=br0
TYPE=Bridge

BOOTPROTO=none
ONBOOT=yes
IPADDR=172.18.96.1
NETMASK=255.255.224.0
NM_CONTROLLED=yes
DNS1=127.0.0.1
DOMAIN=lan
NAME=xsce-LAN
EOF

# the wlan0 file needs the hardware address to work, but this is the template
cat <<EOF > /etc/sysconfig/network-scripts/ifcfg-wlan0
# Generated by XSCE
TYPE=Ethernet
BOOTPROTO=none
BRIDGE=br0
ONBOOT=yes
NM_CONTROLLED=no

# the following needs the xx:xx:xx:xx:xx:xx hardware address to work as AP
HWADDR=
DEVICE=wlan0
EOF
 

# If there is a USB dongle added, attach the dhclient to it
cat <<EOF > /etc/sysconfig/network-scripts/ifcfg-eth0
# Generated by XSCE
BOOTPROTO=dhcp
ONBOOT=yes
DEVICE=eth0
EOF

# enable the service that sets the HWADDR in ifcfg-wlan0
systemctl enable xsce-setup-ap.service

cd /root

# ATTEMPT (not yet working!) to delete Sugar nick, so 1st boot's not corrupted w/ stale nick!
su - olpc -c 'gsettings reset org.sugarlabs.user nick' 2>dev/null
# su - olpc -c 'gsettings set org.sugarlabs.user nick DEFAULT'

# Turn on OpenVPN & ssh daemons (may be gratuitous if xs-sysprep then turns them off, ah well!)
/bin/xs-remote-on
